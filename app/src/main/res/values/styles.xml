<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedCorner" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="YellowButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/saira</item>
        <item name="shapeAppearance">@style/RoundedCorner</item>
    </style>

    <style name="error">
        <item name="stColorBackground">#F3360D</item>
        <item name="stTextBold">true</item>
        <item name="stTextSize">20sp</item>
        <item name="stTextColor">@color/white</item>
        <item name="stIconStart">@drawable/danger</item>
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">#F3360D</item>
    </style>

</resources>